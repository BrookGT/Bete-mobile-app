generator client {
    provider = "prisma-client-js"
}

datasource db {
    provider = "postgresql"
    url      = env("DATABASE_URL")
}

model User {
    id           String   @id @default(cuid())
    email        String   @unique
    passwordHash String
    name         String?
    phone        String?
    role         String   @default("tenant")
    verified     Boolean  @default(false)
    createdAt    DateTime @default(now())
}

model Property {
    id          String   @id @default(cuid())
    ownerId     String
    title       String
    description String?
    price       Float
    address     String?
    city        String?
    type        String?
    lat         Float?
    lng         Float?
    images      String[] @default([])
    createdAt   DateTime @default(now())
}
